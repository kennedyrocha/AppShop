<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"       
             xmlns:views="clr-namespace:AppShop.Views"
             x:Class="AppShop.Menu">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#5CBCC4" ColumnDefinitions="1*,1*" Padding="20">
            <Image Source="logo" Margin="10" HeightRequest="30" HorizontalOptions="Start"/>
            <Label Text="Bem Vindo!" Grid.Column="1" TextColor="White" FontSize="18" VerticalOptions="Center" HorizontalOptions="Start"/>
        </Grid>
    </Shell.FlyoutHeader>
    <ShellContent Title="Planos" ContentTemplate="{ DataTemplate views:Plano }"/>
    <ShellContent Title="Meus Dados" ContentTemplate="{ DataTemplate views:Cliente }"/>
    <ShellContent Title="Detalhe" Icon="resposta03" ContentTemplate="{ DataTemplate views:EstablishmentDetail }"/>
</Shell>